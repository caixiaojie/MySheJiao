<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/between_mppd_25"
        android:layout_marginTop="@dimen/between_mppd_20"
        android:scaleType="centerInside"
        android:src="@mipmap/go_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/between_mppd_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friendHeadImg"
            android:layout_width="@dimen/width_70"
            android:layout_height="@dimen/height_70"
            android:layout_marginLeft="@dimen/between_mppd_35"
            android:src="@mipmap/user_icon" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="@dimen/width_160"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@color/gray">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_34"
                android:gravity="center"
                android:textColor="@color/black_color"
                 android:textSize="@dimen/textSize_22"
                android:background="@color/white_color"
                android:layout_marginBottom="@dimen/between_mppd_0_5" />

            <TextView
                android:id="@+id/departmentText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_34"
                android:gravity="center"
                 android:textColor="@color/black_color"
                android:textSize="@dimen/textSize_18"
                android:background="@color/white_color"
                android:layout_marginBottom="@dimen/between_mppd_0_5" />

            <TextView
                android:id="@+id/member_roleText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_34"
                android:gravity="center"
                 android:textColor="@color/black_color"
                android:textSize="@dimen/textSize_14"
                android:background="@color/white_color" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/harass"
            android:id="@+id/textView12"
            android:drawableLeft="@mipmap/harass"
            android:drawablePadding="@dimen/between_mppd_4"
            android:layout_below="@+id/friendHeadImg"
            android:layout_alignRight="@+id/friendHeadImg"
            android:layout_alignEnd="@+id/friendHeadImg"
            android:layout_marginTop="@dimen/between_mppd_10"
            android:textSize="@dimen/textSize_12"
            android:textColor="@color/red" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/between_mppd_15"
        android:background="@color/gray">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:background="@color/white_color"
            android:layout_marginBottom="@dimen/between_mppd_0_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/phone"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/black_color" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/between_mppd_10"
                android:layout_marginBottom="@dimen/between_mppd_10" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/user_phoneText"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/blue_color" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:background="@color/white_color"
            android:layout_marginBottom="@dimen/between_mppd_0_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/email"
                 android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/black_color" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/between_mppd_10"
                android:layout_marginBottom="@dimen/between_mppd_10" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/emailText"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/blue_color" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:background="@color/white_color"
            android:layout_marginBottom="@dimen/between_mppd_0_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/agree_personText"
                 android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/black_color" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/between_mppd_10"
                android:layout_marginBottom="@dimen/between_mppd_10" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/agreePersonText"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="@dimen/textSize_16"
                android:textColor="@color/blue_color" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_35"
         android:gravity="center"
        android:textSize="@dimen/textSize_18"
        android:background="@color/gray_deep"
        android:textColor="@color/white_color"
        android:id="@+id/textView20"
        android:text="@string/change_relation" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gradeLinear"
        android:background="@color/gray"
        android:layout_marginLeft="@dimen/between_mppd_15">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:background="@color/white_color"
            android:layout_marginBottom="@dimen/between_mppd_0_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                 android:textColor="@color/black_color"
                android:gravity="center"
                android:text="@string/superior"
                android:textSize="@dimen/textSize_16"
                android:id="@+id/bossText"
                android:layout_weight="7"
                android:background="@color/white_color" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/between_mppd_10"
                android:layout_marginBottom="@dimen/between_mppd_10" />
            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:id="@+id/imageView11"
                 android:gravity="center"
                 android:textSize="@dimen/textSize_18"
                android:layout_weight="2"
                android:background="@color/white_color"
                android:paddingLeft="@dimen/between_mppd_12"
                android:paddingRight="@dimen/between_mppd_12"
                android:layout_marginBottom="@dimen/between_mppd_0_5"
                android:scaleType="center"
                android:button="@null" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:background="@color/white_color"
            android:layout_marginBottom="@dimen/between_mppd_0_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black_color"
                android:gravity="center"
                android:text="@string/vis_a_vis"
                android:textSize="@dimen/textSize_16"
                android:id="@+id/colleagueText"
                android:layout_weight="7"
                android:background="@color/white_color" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/between_mppd_10"
                android:layout_marginBottom="@dimen/between_mppd_10" />
            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/textSize_18"
                android:layout_weight="2"
                android:background="@color/white_color"
                android:paddingLeft="@dimen/between_mppd_12"
                android:paddingRight="@dimen/between_mppd_12"
                android:layout_marginBottom="@dimen/between_mppd_0_5"
                android:scaleType="center"
                android:src="@drawable/correct_select"
                android:layout_marginLeft="@dimen/between_mppd_0_5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"

            android:background="@color/white_color"
            android:layout_marginBottom="@dimen/between_mppd_0_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black_color"
                android:gravity="center"
                android:text="@string/subordinate"
                android:textSize="@dimen/textSize_16"
                android:id="@+id/subordinateText"
                android:layout_weight="7"
                android:background="@color/white_color" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/between_mppd_10"
                android:layout_marginBottom="@dimen/between_mppd_10" />
            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:id="@+id/imageView6"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/textSize_18"
                android:layout_weight="2"
                android:background="@color/white_color"
                android:paddingLeft="@dimen/between_mppd_12"
                android:paddingRight="@dimen/between_mppd_12"
                android:layout_marginBottom="@dimen/between_mppd_0_5"
                android:scaleType="center"
                android:src="@drawable/correct_select"
                android:layout_marginLeft="@dimen/between_mppd_0_5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:background="@color/white_color"
            android:layout_marginBottom="@dimen/between_mppd_0_5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black_color"
                android:gravity="center"
                android:text="@string/alone"
                android:textSize="@dimen/textSize_16"
                android:id="@+id/textView13"
                android:layout_weight="7"
                android:background="@color/white_color" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/between_mppd_10"
                android:layout_marginBottom="@dimen/between_mppd_10" />
            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:id="@+id/imageView7"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/textSize_18"
                android:layout_weight="2"
                android:background="@color/white_color"
                android:paddingLeft="@dimen/between_mppd_12"
                android:paddingRight="@dimen/between_mppd_12"
                android:layout_marginBottom="@dimen/between_mppd_0_5"
                android:scaleType="center"
                android:src="@drawable/correct_select"
                android:layout_marginLeft="@dimen/between_mppd_0_5" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_relationText"
        android:id="@+id/changeRelationText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/between_mppd_30"
        android:textSize="@dimen/textSize_26"
        android:textColor="@drawable/blue_color_select" />

</LinearLayout>