<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView15"
            android:scaleType="centerInside"
            android:src="@mipmap/go_back"
            android:layout_marginLeft="@dimen/between_mppd_26"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/improve"
            android:id="@+id/textView16"
             android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <View
         android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/grade_Horizontal_Recyclerview"
         android:background="@color/gray" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_178"
        android:background="@color/white_color"
        android:id="@+id/editText11"
        android:layout_gravity="center_horizontal" />

    <View
         android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/grade_Horizontal_Recyclerview"
         android:background="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_service_message"
        android:id="@+id/textView25"
        android:textColor="@color/blue_color"
        android:layout_marginTop="@dimen/between_mppd_45"
        android:textSize="@dimen/textSize_20"
        android:layout_gravity="center_horizontal" />
</LinearLayout>