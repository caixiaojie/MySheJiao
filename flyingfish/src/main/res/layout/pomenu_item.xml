<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
      android:background="@drawable/white_corners_select"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="@dimen/width_240"
        android:layout_height="@dimen/height_60"
         android:text="Large Text"
        android:layout_marginTop="@dimen/between_mppd_15"
        android:gravity="center"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textSize_18"
        android:id="@+id/popText" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/width_240"
        android:layout_height="@dimen/height_40"
        android:layout_marginBottom="@dimen/between_mppd_15"

        android:layout_gravity="right">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/sure"
            android:textSize="@dimen/textSize_14"
            android:id="@+id/popSureBtn"
            android:textColor="@drawable/black_color_select"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:text="@string/cancel_string"
            android:textSize="@dimen/textSize_14"
            android:id="@+id/popCancelBtn"
            android:textColor="@drawable/black_color_select"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>