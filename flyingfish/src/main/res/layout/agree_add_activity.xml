<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/between_mppd_25"
        android:layout_marginTop="@dimen/between_mppd_20"
        android:scaleType="centerInside"
        android:src="@mipmap/go_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/between_mppd_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headImg"
            android:layout_width="@dimen/width_70"
            android:layout_height="@dimen/height_70"
            android:layout_marginLeft="@dimen/between_mppd_35"
            android:src="@mipmap/user_icon" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="@dimen/width_160"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_34"
                android:gravity="center"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textSize_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/departmentText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_34"
                android:gravity="center"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textSize_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/positionText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_34"
                android:gravity="center"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textSize_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_35"
        android:gravity="center"
        android:textSize="@dimen/textSize_18"
        android:background="@color/gray_deep"
        android:textColor="@color/white_color"
        android:id="@+id/textView20"
        android:text="@string/chose_relation" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:id="@+id/agree_Linear">

        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:id="@+id/imageView11"
            android:src="@mipmap/agree"
            android:scaleType="center"
            android:gravity="center"
            android:textSize="@dimen/textSize_18"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/between_mppd_15" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@drawable/blue_color_select"
            android:gravity="center_vertical"
            android:text="@string/agree"
            android:textSize="@dimen/textSize_18"
            android:id="@+id/textView21"
            android:layout_weight="3" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/between_mppd_15"
        android:background="@color/gray" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:id="@+id/refuse_Linear">

        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:src="@mipmap/refuse"
            android:scaleType="center"
            android:text="New Text"
            android:gravity="center"
            android:textSize="@dimen/textSize_18"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/between_mppd_15" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:textColor="@drawable/blue_color_select"
            android:text="@string/mistake"
            android:textSize="@dimen/textSize_18"
            android:id="@+id/textView22"
            android:layout_weight="3" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/between_mppd_15"
        android:background="@color/gray" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:id="@+id/refuse_again_Linear">

        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:id="@+id/imageView13"
            android:src="@mipmap/refuse_again"
            android:gravity="center"
            android:textSize="@dimen/textSize_18"
            android:layout_weight="1"
            android:scaleType="center"
            android:layout_marginLeft="@dimen/between_mppd_15" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@drawable/blue_color_select"
            android:text="@string/refuse_now"
            android:textSize="@dimen/textSize_18"
            android:id="@+id/textView23"
            android:layout_weight="3" />
    </LinearLayout>

</LinearLayout>